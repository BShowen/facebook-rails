<div class="form-container">

    <h2>New post</h2>

    <%= form_with(model: @post, url: posts_path) do |f| %>
    <div class="field">
        <%= f.label :title %> <br>
        <%= f.text_field :title, value: "",class: "text-input" %>
    </div>
    
    <div class="field">
        <%= f.label :body %> <br>
        <%= f.text_area :body, class: "text-field" %>
    </div>

    <div class="actions">
        <%= f.submit class: "button"%>
    </div>
    <% end %>
</div>